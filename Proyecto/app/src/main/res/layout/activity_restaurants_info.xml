<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".restaurants_info"
    android:background="@color/BackgroundScreen">

    <ImageView
        android:id="@+id/image_res_des"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="334dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_res_des"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/name_res"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimaryDark"
            android:text="Nombre Restaurante A B"
            android:textAlignment="center"
            android:textColor="@color/TextTitleCard"
            android:textSize="25dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/address_res"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Direccion"
            android:textColor="@color/colorPrimary"
            android:background="@color/TextFields"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="25dp"/>

        <TextView
            android:id="@+id/description_res"
            android:layout_width="match_parent"
            android:layout_height="184dp"
            android:text="Descripcion jashjsdhs hsdjhjshjfh ahsjdhjfhjda asjdfhsjfhsjdh sdhjhsdjhajhda"
            android:textColor="@color/colorPrimary"
            android:background="@color/Description"/>
        <Button
            android:id="@+id/reservas_res_des"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/Botton"
            android:text="Reservar"
            android:textAlignment="center"
            android:textSize="17dp" />



    </LinearLayout>
</android.support.constraint.ConstraintLayout>